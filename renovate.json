{
  "extends": [
    "github>gibizer/renovate-config:dev-preview2.json"
  ],
  "constraints": {
    "go": "1.19"
  },
  "baseBranches": ["dev-preview2"],
  "useBaseBranchConfig": "merge",
  "packageRules": [
    {
      "matchPackageNames": ["github.com/openstack-k8s-operators/openstack-operator/apis"],
      "enabled": false
    },
    {
      "matchPackageNames": ["!!!openstack-operator-dev-preview2"],
      "enabled": false
    }
  ],
  "postUpgradeTasks": {
    "commands": ["make gowork", "make tidy", "make manifests generate"],
    "fileFilters": ["**/go.mod", "**/go.sum", "**/*.go", "**/*.yaml"],
    "executionMode": "update"
  }
}
